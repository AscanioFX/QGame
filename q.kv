<TopBar>
    orientation: 'horizontal'
    size_hint_y: None
    height: 75

    Label:
        id: show_current
        text: 'Player {}'.format(root.currentPlayer)
    
    Label:
        text: 'Logo or whatever'

    Button:
        text: 'Menu'
        on_release: root.startMenu()

<GameGrid>
    spacing: 2
    padding: 5
    canvas.before:
        Color:
            rgba: 128, 128, 128, 0.5
        Rectangle:
            pos: self.pos
            size: self.size

<MenuPopup>:
    size_hint_x: 0.7
    size_hint_y: 0.7
    auto_dismiss: False

    ScreenManager:
        id: s_manager

        Screen:
            id: menu_screen
            name: 'menu_screen'

            BoxLayout:
                orientation: 'vertical'
                padding: 10
                spacing: 3                    
                Button:
                    text: 'New game'
                    on_release: root.newGame()
            
                Button:
                    text: 'Settings'
                    on_release: root.switchToSettings()

                Button:
                    text: 'How to play'
                    on_release: root.switchToHowtoplay()
                
                Button:
                    text: 'Close popup'
                    on_release: root.close()
                
                Button:
                    text: 'Quit'
                    on_release: root.quitGame()

        Screen:
            id: settings_screen
            name: 'settings_screen'

            BoxLayout:
                orientation: 'vertical'
                padding: 30

            Label:
                text: 'SETTINGS HERE'

            BoxLayout:
                padding: 10
                Button:
                    size_hint_y: None
                    height: 50
                    text: 'Back'
                    on_release: root.backToMenu()

        Screen:
            id: how_screen
            name: 'howto_screen'

            BoxLayout:
                orientation: 'vertical'
                padding: 30

            Label:
                text: 'HOW TO PLAY'

            BoxLayout:
                padding: 10
                Button:
                    size_hint_y: None
                    height: 50
                    text: 'Back'
                    on_release: root.backToMenu()

<EndPopup>:
    size_hint_x: 0.7
    size_hint_y: 0.7
    auto_dismiss: False

    BoxLayout:
        orientation: 'vertical'
        padding: 10

        Label:
            halign: 'center'
            size_hint_y: None
            height: 100
            text: "END OF GAME"

        Label:
            text: 'Player {} won!'.format(root.winner)

        Button:
            size_hint_y: None
            height: 100
            text: 'New Game'
            on_release: root.newGame()

<GridEntry>:
    border: 16, 16, 16, 16
    background_normal: './img/base.png'
    background_down: './img/base_down.png'

<MainLayout>:
    id: main_layout
    orientation: 'vertical'
    padding: 5
    spacing: 5

    canvas.before:
        Color:
            rgba: 128, 128, 128, 0.1
        Rectangle:
            pos: self.pos
            size: self.size

    TopBar:
        settings: main_layout.settings
        currentPlayer: game_grid.player
        newGameFunction: game_grid.newGame

    GameGrid:
        id: game_grid
        settings: main_layout.settings

