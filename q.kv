<TopBar>
    orientation: 'horizontal'
    size_hint_y: None
    height: 75

    Label:
        id: show_current
        text: 'Player {}'.format(root.currentPlayer)
    
    Label:
        text: 'Logo or whatever'

    Button:
        text: 'Menu'
        on_release: root.startMenu()

<GameGrid>
    spacing: 2
    padding: 5
    canvas.before:
        Color:
            rgba: 128, 128, 128, 0.5
        Rectangle:
            pos: self.pos
            size: self.size

<CustomPopup>:
    size_hint_x: 0.7
    size_hint_y: 0.7
    auto_dismiss: False


    ScreenManager:
        id: s_manager

        Screen:
            id: r_screen
            name: 'result_screen'

            BoxLayout:
                orientation: 'vertical'
                padding: 10

                Label:
                    halign: 'center'
                    size_hint_y: None
                    height: 100
                    text: "END OF GAME"

                Label:
                    text: 'Player {} won!'.format(root.winner)

                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_y: None
                    height: 50

                    Button:
                        text: 'New Game'
                        on_release: root.newGame()

                    Button:
                        text: 'Settings'
                        on_release: root.switchToSettings()
        Screen:
            id: s_screen
            name: 'settings_screen'

            BoxLayout:
                orientation: 'vertical'
                padding: 30

            Label:
                text: 'SETTINGS HERE'

            BoxLayout:
                padding: 10
                Button:
                    size_hint_y: None
                    height: 50
                    text: 'Back'
                    on_release: root.close()
<GridEntry>:
    border: 16, 16, 16, 16
    background_normal: './img/base.png'
    background_down: './img/base_down.png'

<customLabel>:
    canvas.before:
        Color:
            rgba: 0.81, 0.51, 0, 1 #Color
        Rectangle:
            pos: self.pos
            size: (250, self.size[1])
<TopBarTEMP>
    canvas.before:
        Color:
            rgba: 0.81, 0.51, 0, 1 #Color
        Rectangle:
            pos: self.pos
            size: (250, self.size[1])

<MainLayout>:
    orientation: 'vertical'
    padding: 5
    spacing: 5

    canvas.before:
        Color:
            rgba: 128, 128, 128, 0.1
        Rectangle:
            pos: self.pos
            size: self.size

